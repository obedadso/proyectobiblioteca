<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Panel Bibliotecario - Mi Biblioteca</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <style>
    body {
      margin: 0;
      background: url('https://images.unsplash.com/photo-1519682337058-a94d519337bc') no-repeat center center fixed;
      background-size: cover;
      color: white;
    }
    .card {
      background-color: rgba(0, 0, 0, 0.75);
      color: white;
    }
    .btn-logout-custom {
      background: #fff !important;
      color: #222 !important;
      border: 1px solid #222 !important;
      font-weight: bold;
      border-radius: 30px;
      padding: 6px 18px;
      transition: 0.3s;
    }
    .btn-logout-custom:hover {
      background: #222 !important;
      color: #fff !important;
      border: 1px solid #fff !important;
      text-decoration: none;
    }
    .sidebar {
      background-color: rgba(0, 0, 0, 0.8);
      min-height: 100vh;
    }
    .nav-link {
      color: #fff;
    }
    .nav-link:hover {
      color: #ffc107;
    }
    footer {
      background-color: rgba(0, 0, 0, 0.8);
    }
    .avatar-small {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 50%;
      display: inline-block;
    }
    .table-actions form {
      display: inline;
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100" style="margin-bottom: 0; border-radius: 0;">
    <a class="navbar-brand d-flex align-items-center" href="/dashboard-bibliotecario">
      <span class="font-weight-bold">üìö Mi Biblioteca</span>
    </a>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item">
        <a class="btn btn-logout-custom btn-sm ml-2" href="/logout">
          <i class="bi bi-box-arrow-right"></i> Cerrar sesi√≥n
        </a>
      </li>
    </ul>
  </nav>

  <!-- Contenedor principal -->
  <div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <div class="sidebar p-3 text-white" style="width: 250px;">
      <div class="text-center mb-4">
        <img 
        src="https://cdn-icons-png.flaticon.com/512/3135/3135768.png" 
        alt="Bibliotecario" 
        class="avatar-small mb-2" 
      />
              <h6><%= user.nombre %></h6>
        <small class="text-success">‚óè En l√≠nea</small>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item mb-2"><a class="nav-link active" href="/dashboard-bibliotecario">üìä Dashboard</a></li>
        <!-- Cambia esto en tu sidebar -->
      </ul>
    </div>

    <!-- Cards y tabla -->
    <div class="container mt-5">
      <h2>Bienvenido, <%= user.nombre %> (Bibliotecario)</h2>
      <div class="row my-4">
        <div class="col-md-4">
          <div class="card text-center shadow">
            <div class="card-body">
              <i class="bi bi-book text-primary" style="font-size:2rem;"></i>
              <h5 class="card-title mt-2">Libros Disponibles</h5>
              <p class="card-text display-4"><%= totalDisponibles %></p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-center shadow">
            <div class="card-body">
              <i class="bi bi-journal-arrow-up text-warning" style="font-size:2rem;"></i>
              <h5 class="card-title mt-2">Libros Prestados</h5>
              <p class="card-text display-4"><%= totalPrestados %></p>
            </div>
          </div>
        </div>
        <div class="col-md-4">
          <div class="card text-center shadow">
            <div class="card-body">
              <i class="bi bi-journal-check text-success" style="font-size:2rem;"></i>
              <h5 class="card-title mt-2">Libros Devueltos</h5>
              <p class="card-text display-4"><%= totalDevueltos %></p>
            </div>
          </div>
        </div>
      </div>
      <h4 class="mt-5">Pr√©stamos Activos</h4>
      <table class="table table-dark table-striped mt-3">
        <thead>
          <tr>
            <th>ID</th>
            <th>Libro</th>
            <th>Usuario</th>
            <th>Fecha Pr√©stamo</th>
            <th>Fecha Devoluci√≥n</th>
            <th>Estado</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% prestamosActivos.forEach(function(p) { %>
            <tr>
              <td><%= p.id %></td>
              <td><%= p.libro %></td>
              <td><%= p.usuario %></td>
              <td><%= p.fecha_prestamo %></td>
              <td><%= p.fecha_devolucion %></td>
              <td><%= p.estado %></td>
              <td class="table-actions">
                <% if (p.estado === 'Prestado') { %>
                  <form action="/books/prestamos/devolver/<%= p.id %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-success btn-sm" title="Marcar como devuelto">
                      <i class="bi bi-arrow-return-left"></i>
                    </button>
                  </form>
                <% } %>
                <form action="/books/prestamos/delete/<%= p.id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-danger btn-sm" title="Eliminar pr√©stamo" onclick="return confirm('¬øSeguro que deseas eliminar este pr√©stamo?');">
                    <i class="bi bi-trash"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Footer fijo abajo -->
  <footer class="text-white text-center py-3 mt-auto w-100">
    &copy; 2025 Mi Biblioteca. Todos los derechos reservados.
    <span class="float-right mr-4">Versi√≥n 1.0</span>
  </footer>
</body>
</html>