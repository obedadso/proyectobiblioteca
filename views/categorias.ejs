  <% if (messages.success) { %>
<div class="alert alert-success d-none" role="alert" id="success-message"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
<div class="alert alert-danger d-none" role="alert" id="error-message"><%- messages.error %></div>
<% } %>

<script>
  // AsegÃºrate de que los mensajes se muestren solo si existen
  document.addEventListener("DOMContentLoaded", function() {
    if (document.getElementById("success-message") && document.getElementById("success-message").innerText) {
      document.getElementById("success-message").classList.remove("d-none");
    }
    if (document.getElementById("error-message") && document.getElementById("error-message").innerText) {
      document.getElementById("error-message").classList.remove("d-none");
    }
  });
</script>


