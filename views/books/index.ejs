<!doctype html>
<html lang="es">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Biblioteca</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: url('https://images.unsplash.com/photo-1519682337058-a94d519337bc') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #fff;
    }

    .card {
      background-color: rgba(0, 0, 0, 0.75);
      color: #fff;
    }

    .btn-edit-custom {
      background-color: #198754;
      color: white;
      border: 1px solid #198754;
      transition: 0.3s ease;
    }

    .btn-edit-custom:hover,
    .btn-edit-custom:focus {
      background-color: white;
      color: #198754;
    }

    .btn-delete-custom {
      background-color: #dc3545;
      color: white;
      border: none;
      transition: 0.3s ease;
    }

    .btn-delete-custom:hover,
    .btn-delete-custom:focus {
      background-color: white;
      color: #dc3545;
    }

    .btn-add-custom {
      background: linear-gradient(45deg, #007bff, #6610f2);
      color: white;
      border: none;
      padding: 8px 20px;
      font-weight: bold;
      border-radius: 30px;
      transition: 0.3s ease;
    }

    .btn-add-custom.btn-sm {
        padding: 8px 22px;
        font-size: 0.8rem;
    }

    .btn-add-custom:hover {
      background: linear-gradient(45deg, #6610f2, #007bff);
      color: #fff;
    }

    .table th, .table td {
      color: #fff;
    }

    .pagination {
      display: flex;
      justify-content: center;
      padding: 20px 0;
    }
    .pagination a {
      color: #007bff;
      padding: 5px 10px;
      text-decoration: none;
    }
    .pagination a:hover {
      background-color: #007bff;
      color: white;
    }
    .pagination .active {
      background-color: #007bff;
      color: white;
      font-weight: bold;
    }

   .pagination a {
  color: white; 
}

.pagination a {
  color: white; 
}

.pagination a:hover {
  color: rgb(255, 255, 255);
  background-color: rgb(00, 00, 07); 
}

.pagination .active {
  color: white;
  background-color: transparent; 
  border: none; 
}

  </style>
</head>

<body class="container" style="margin-top: 50px;">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded mb-4">
  <a class="navbar-brand d-flex align-items-center" href="/">
    <span class="font-weight-bold">ðŸ“š Mi Biblioteca</span>
  </a>
</nav>

  <% if (messages.success) { %>
<div class="alert alert-success d-none" role="alert" id="success-message"><%- messages.success %></div>
<% } %>

<% if (messages.error) { %>
<div class="alert alert-danger d-none" role="alert" id="error-message"><%- messages.error %></div>
<% } %>

<script>
  // AsegÃºrate de que los mensajes se muestren solo si existen
  document.addEventListener("DOMContentLoaded", function() {
    if (document.getElementById("success-message") && document.getElementById("success-message").innerText) {
      document.getElementById("success-message").classList.remove("d-none");
    }
    if (document.getElementById("error-message") && document.getElementById("error-message").innerText) {
      document.getElementById("error-message").classList.remove("d-none");
    }
  });
</script>


  <div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
      <form class="form-inline" action="/books/search" method="GET">
        <div class="input-group">
            <input type="text" class="form-control" name="query" placeholder="Buscar libro" style="width: 250px;">
            <button type="submit" class="btn btn-add-custom btn-sm ml-2">
                <i class="bi bi-search"></i> Buscar
            </button>
        </div>
    </form>
    
     <a class="btn btn-add-custom" href="/books/add"><i class="bi bi-plus-circle"></i> AÃ±adir libro</a>
     </div>
     <div class="card-body">

      <% if(data.length) { %>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>#</th>
            <th>Nombre</th>
            <th>Autor</th>
            <th width="200px">Acciones</th>
          </tr>
        </thead>
        <tbody>
          <% for(var i = 0; i< data.length; i++) { %>
          <tr>
            <th scope="row"><%= (i+1) %></th>
            <td><%= data[i].name%></td>
            <td><%= data[i].author%></td>
            <td>
                <div class="d-flex">
                  <a class="btn btn-edit-custom btn-sm rounded-pill px-3" 
                    href="/books/edit/<%=data[i].id%>" 
                    style="margin-right: 10px;">
                      <i class="bi bi-pencil-square"></i> Editar
                  </a>

                  <a class="btn btn-delete-custom btn-sm rounded-pill px-3" 
                    href="/books/delete/<%=data[i].id%>" 
                    onclick="return confirm('Â¿EstÃ¡s seguro de que deseas eliminar este libro?')">
                      <i class="bi bi-trash"></i> Eliminar
                  </a>

                </div>
              </td>
          </tr>
          <% } %>
        </tbody>
      </table>

      <div class="pagination">
        <% if (pagination.previous) { %>
        <a href="/books?page=<%= pagination.previous %>">&laquo; Anterior</a>
        <% } %>
        
        <% for (let i = 1; i <= pagination.totalPages; i++) { %>
        <a href="/books?page=<%= i %>" class="<%= i === pagination.currentPage ? 'active' : '' %>"><%= i %></a>
        <% } %>

        <% if (pagination.next) { %>
        <a href="/books?page=<%= pagination.next %>">Siguiente &raquo;</a>
        <% } %>
      </div>

      <% } %>

      <% if(!data.length) { %>
      <p class="text-center">Â¡No se encontraron libros!</p>
      <% } %>

    </div>
  </div>

  <footer class="bg-dark text-white text-center py-2 mt-4 rounded">
  <small>&copy; 2025 Mi Biblioteca. Todos los derechos reservados.</small>
</footer>

</body>
</html>
