<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>BiblioApp - Autores</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      margin: 0;
      background: url('https://images.unsplash.com/photo-1519682337058-a94d519337bc') no-repeat center center fixed;
      background-size: cover;
      color: white;
    }
    .card {
      background-color: rgba(0, 0, 0, 0.75);
      color: white;
    }
    .card-header {
      background-color: rgba(255, 255, 255, 0.9);
    }
    .btn-add-custom {
      background: linear-gradient(45deg, #007bff, #6610f2);
      color: white;
      border: none;
      padding: 8px 20px;
      font-weight: bold;
      border-radius: 30px;
      transition: 0.3s ease;
      display: inline-flex;
      align-items: center;
      gap: 6px;
    }
    .btn-add-custom.btn-sm {
      padding: 8px 22px;
      font-size: 0.8rem;
    }
    .btn-add-custom:hover {
      background: linear-gradient(45deg, #6610f2, #007bff);
      color: #fff;
      text-decoration: none;
    }
    .sidebar {
      background-color: rgba(0, 0, 0, 0.8);
      min-height: 100vh;
    }
    .nav-link {
      color: #fff;
    }
    .nav-link:hover {
      color: #ffc107;
    }
    footer {
      background-color: rgba(0, 0, 0, 0.8);
    }
    .avatar-small {
      width: 40px;
      height: 40px;
      object-fit: cover;
      border-radius: 50%;
      display: inline-block;
    }
    .modal-content {
      background-color: #000;
      color: #fff;
      border: 1px solid #444;
    }
    .modal-header, .modal-footer {
      border-color: #444;
    }
    .btn-close {
      filter: invert(1);
    }
  </style>
</head>
<body>
  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark w-100" style="margin-bottom: 0; border-radius: 0;">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <span class="font-weight-bold">üìö Mi Biblioteca</span>
    </a>
  </nav>

  <!-- Contenedor principal -->
  <div class="d-flex" style="min-height: 100vh;">
    <!-- Sidebar -->
    <div class="sidebar p-3 text-white" style="width: 250px;">
      <div class="text-center mb-4">
        <img 
          src="/images/obed.png" 
          alt="Usuario hombre" 
          class="avatar-small mb-2" 
        />
        <h6>Obed Alvarez</h6>
        <small class="text-success">‚óè En l√≠nea</small>
      </div>
      <ul class="nav flex-column">
        <li class="nav-item mb-2"><a class="nav-link" href="/">üìä Dashboard</a></li>
        <li class="nav-item mb-2"><a class="nav-link active" href="/books/autores">üñã Autores</a></li>
        <li class="nav-item"><a class="nav-link" href="/books/editoriales">üè¢ Editoriales</a></li>
        <li class="nav-item"><a class="nav-link" href="/books/categorias">üìÇ Categorias</a></li>
        <li class="nav-item"><a class="nav-link" href="/books">üìñ Libros</a></li>
      </ul>
    </div>

    <!-- Contenido principal -->
    <div class="container mt-4">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <span class="text-dark w-100 text-center" style="font-weight:bold; font-size:1.5rem;">Gesti√≥n de Autores</span>
          <!-- Bot√≥n para abrir el modal de agregar -->
          <button class="btn-add-custom btn-sm" data-bs-toggle="modal" data-bs-target="#modalAgregarAutor">
            <i class="bi bi-plus-circle"></i> Nuevo Autor
          </button>
        </div>
        <!-- Mensajes flash -->
        <% if (success && success.length > 0) { %>
          <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
            <%= success[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
          </div>
        <% } %>
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
            <%= error[0] %>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
          </div>
        <% } %>
        <div class="card-body">
          <table class="table table-bordered table-hover table-dark">
            <thead class="table-light">
              <tr>
                <th>#</th>
                <th>Nombre</th>
                <th>Estado</th>
                <th>Acci√≥n</th>
              </tr>
            </thead>
            <tbody>
              <% autores.forEach((autor, index) => { %>
                <tr>
                  <td><%= index + 1 %></td>
                  <td><%= autor.nombre %></td>
                  <td><%= autor.nacionalidad %></td>
                  <td>
                    <!-- Bot√≥n para abrir modal de editar -->
                    <button 
                      class="btn btn-primary btn-sm btn-editar"
                      data-id="<%= autor.id %>"
                      data-nombre="<%= autor.nombre %>"
                      data-nacionalidad="<%= autor.nacionalidad %>"
                      data-bs-toggle="modal"
                      data-bs-target="#modalEditarAutor"
                    >‚úèÔ∏è Editar</button>
                    <!-- Bot√≥n para abrir modal de eliminar -->
                    <button 
                      class="btn btn-danger btn-sm btn-eliminar"
                      data-id="<%= autor.id %>"
                      data-nombre="<%= autor.nombre %>"
                      data-bs-toggle="modal"
                      data-bs-target="#modalEliminarAutor"
                    >üóëÔ∏è Eliminar</button>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <!-- Modal para agregar autor -->
  <div class="modal fade" id="modalAgregarAutor" tabindex="-1" aria-labelledby="modalAgregarAutorLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-white">
        <div class="modal-header">
          <h5 class="modal-title" id="modalAgregarAutorLabel">Nuevo Autor</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <form action="/books/autores/add" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre:</label>
              <input type="text" class="form-control" id="nombre" name="nombre" required autocomplete="off">
            </div>
            <div class="mb-3">
              <label for="nacionalidad" class="form-label">Estado:</label>
              <select class="form-control" id="nacionalidad" name="nacionalidad" required>
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Guardar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal para editar autor -->
  <div class="modal fade" id="modalEditarAutor" tabindex="-1" aria-labelledby="modalEditarAutorLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-white">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEditarAutorLabel">Editar Autor</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <form id="formEditarAutor" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="edit-nombre" class="form-label">Nombre:</label>
              <input type="text" class="form-control" id="edit-nombre" name="nombre" required autocomplete="off">
            </div>
            <div class="mb-3">
              <label for="edit-nacionalidad" class="form-label">Estado:</label>
              <select class="form-control" id="edit-nacionalidad" name="nacionalidad" required>
                <option value="Activo">Activo</option>
                <option value="Inactivo">Inactivo</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal para eliminar autor -->
  <div class="modal fade" id="modalEliminarAutor" tabindex="-1" aria-labelledby="modalEliminarAutorLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-dark">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEliminarAutorLabel">Eliminar Autor</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <form id="formEliminarAutor" method="POST">
          <div class="modal-body">
            <p>¬øSeguro que deseas eliminar al autor <strong id="delete-nombre"></strong>?</p>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Editar: cargar datos en el modal
    document.querySelectorAll('.btn-editar').forEach(btn => {
      btn.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const nombre = this.getAttribute('data-nombre');
        const nacionalidad = this.getAttribute('data-nacionalidad');
        document.getElementById('edit-nombre').value = nombre;
        document.getElementById('edit-nacionalidad').value = nacionalidad;
        document.getElementById('formEditarAutor').action = `/books/autores/edit/${id}`;
      });
    });

    // Eliminar: cargar datos en el modal
    document.querySelectorAll('.btn-eliminar').forEach(btn => {
      btn.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const nombre = this.getAttribute('data-nombre');
        document.getElementById('delete-nombre').textContent = nombre;
        document.getElementById('formEliminarAutor').action = `/books/autores/delete/${id}`;
      });
    });
  </script>
  <!-- Footer fijo abajo -->
  <footer class="text-white text-center py-3 mt-auto w-100">
    &copy; 2025 Mi Biblioteca. Todos los derechos reservados.
    <span class="float-right mr-4">Versi√≥n 1.0</span>
  </footer>
</body>
</html>