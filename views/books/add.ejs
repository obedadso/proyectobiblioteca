  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <style>
    body {
      background: url('https://images.unsplash.com/photo-1519682337058-a94d519337bc') no-repeat center center fixed;
      background-size: cover;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #fff;
    }

    .card {
      background-color: rgba(0, 0, 0, 0.75);
      color: #fff;
    }

    .btn-add-custom {
      background: linear-gradient(45deg, #007bff, #6610f2);
      color: white;
      border: none;
      padding: 8px 20px;
      font-weight: bold;
      border-radius: 30px;
      transition: 0.3s ease;
    }

    .btn-add-custom.btn-sm {
      padding: 8px 22px;
      font-size: 0.8rem;
    }

    .btn-add-custom:hover {
      background: linear-gradient(45deg, #6610f2, #007bff);
      color: #fff;
    }
  </style>
</head>

<body class="container" style="margin-top: 50px;">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark rounded mb-4">
    <a class="navbar-brand d-flex align-items-center" href="/">
      <span class="font-weight-bold">ðŸ“š Mi Biblioteca</span>
    </a>
  </nav>

  <!-- Mensajes de error y Ã©xito -->
  <% if (messages.error) { %>
    <div class="alert alert-danger" role="alert"><%- messages.error %></div>
  <% } %>
  <% if (messages.success) { %>
    <div class="alert alert-success" role="alert"><%- messages.success %></div>
  <% } %>

  <div class="card">
    <div class="card-header">
      AÃ±adir Libro
    </div>
    <div class="card-body">
      <form action="/books/add" method="post">
        <div class="form-group">
          <label>Nombre:</label>
          <input type="text" class="form-control" name="name" value="<%= name %>" autocomplete="off">
        </div>
        <div class="form-group">
          <label>Autor:</label>
          <input type="text" class="form-control" name="author" value="<%= author %>" autocomplete="off">
        </div>
        <div class="form-group">
          <input type="submit" class="btn btn-add-custom" value="AÃ±adir Libro"/>
        </div>
      </form>
    </div>
  </div>

  <footer class="bg-dark text-white text-center py-2 mt-4 rounded">
