  <!-- Modal para editar pr√©stamo -->
  <div class="modal fade" id="modalEditarPrestamo" tabindex="-1" aria-labelledby="modalEditarPrestamoLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-white">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEditarPrestamoLabel">Editar Pr√©stamo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <form id="formEditarPrestamo" method="POST">
          <div class="modal-body">
            <div class="mb-3">
              <label for="edit-libro" class="form-label">Libro:</label>
              <select class="form-select" id="edit-libro" name="libro" required>
                <option value="">Seleccione un libro</option>
                <% libros.forEach(libro => { %>
                  <option value="<%= libro.id %>"><%= libro.name %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="edit-usuario" class="form-label">Usuario:</label>
              <select class="form-select" id="edit-usuario" name="usuario" required>
                <option value="">Seleccione un usuario</option>
                <% usuarios.forEach(usuario => { %>
                  <option value="<%= usuario.id %>"><%= usuario.nombre %></option>
                <% }) %>
              </select>
            </div>
            <div class="mb-3">
              <label for="edit-fecha_prestamo" class="form-label">Fecha Pr√©stamo:</label>
              <input type="date" class="form-control" id="edit-fecha_prestamo" name="fecha_prestamo" required>
            </div>
            <div class="mb-3">
              <label for="edit-fecha_devolucion" class="form-label">Fecha Devoluci√≥n:</label>
              <input type="date" class="form-control" id="edit-fecha_devolucion" name="fecha_devolucion" required>
            </div>
            <div class="mb-3">
              <label for="edit-estado" class="form-label">Estado:</label>
              <select class="form-select" id="edit-estado" name="estado" required>
                <option value="Prestado">Prestado</option>
                <option value="Devuelto">Devuelto</option>
                <option value="Vencido">Vencido</option>
              </select>
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Actualizar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- Modal para eliminar pr√©stamo -->
  <div class="modal fade" id="modalEliminarPrestamo" tabindex="-1" aria-labelledby="modalEliminarPrestamoLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-white">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEliminarPrestamoLabel">Eliminar Pr√©stamo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
        </div>
        <form id="formEliminarPrestamo" method="POST">
          <div class="modal-body">
            <p>¬øSeguro que deseas eliminar el pr√©stamo del libro <strong id="delete-libro-nombre"></strong>?</p>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-danger">Eliminar</button>
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Editar: cargar datos en el modal
    document.querySelectorAll('.btn-editar').forEach(btn => {
      btn.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const libro = this.getAttribute('data-libro');
        const usuario = this.getAttribute('data-usuario');
        const fecha_prestamo = this.getAttribute('data-fecha_prestamo');
        const fecha_devolucion = this.getAttribute('data-fecha_devolucion');
        const estado = this.getAttribute('data-estado');
        document.getElementById('edit-libro').value = libro;
        document.getElementById('edit-usuario').value = usuario;
        document.getElementById('edit-fecha_prestamo').value = fecha_prestamo;
        document.getElementById('edit-fecha_devolucion').value = fecha_devolucion;
        document.getElementById('edit-estado').value = estado;
        document.getElementById('formEditarPrestamo').action = `/books/prestamos/edit/${id}`;
      });
    });

    // Eliminar: cargar datos en el modal
    document.querySelectorAll('.btn-eliminar').forEach(btn => {
      btn.addEventListener('click', function() {
        const id = this.getAttribute('data-id');
        const libro = this.getAttribute('data-libro');
        document.getElementById('delete-libro-nombre').textContent = libro;
        document.getElementById('formEliminarPrestamo').action = `/books/prestamos/delete/${id}`;
      });
    });
  </script>
